# usage: pn [client | api | domain] command
function pn() {
  if [[ $# -eq 0 ]]; then
    pnpm
    return
  fi

  case "$1" in
    cl | client)
      shift
      pnpm --filter=@Datum/client "$@"
      return
      ;;
    a | api)
      shift
      pnpm --filter=@Datum/api "$@"
      return
      ;;
    d | domain)
      shift
      pnpm --filter=@Datum/domain "$@"
      return
      ;;
  esac

  pnpm "$@"
}

