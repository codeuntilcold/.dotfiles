scrolloff 10

list-entry-date-format "%Y %m %d"

item-content-format "<b>Title</b>: %t<br>|<b>Author</b>: %a<br>|<b>Date</b>: %d<br>|<br>%c<br>|<br><hr>%L"

bind ^B exec newsboat-bookmark-academic "%l" "%t" "" ""

color-list-item-unread        cyan default
color-list-item-important     blue default bold
color-list-feed-unread        cyan default
color-list-section-unread     cyan default

