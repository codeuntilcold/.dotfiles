#!/bin/bash
# Check server mode status and output for waybar
if [ -f "$HOME/.cache/sway-server-mode" ]; then
    echo '{"text": "SRV", "class": "server-mode-on", "tooltip": "Server Mode ON - Lid close disabled"}'
else
    echo '{"text": "", "class": "server-mode-off", "tooltip": "Server Mode OFF"}'
fi
