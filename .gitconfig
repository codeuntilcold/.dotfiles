[push]
    autoSetupRemote = true

[includeIf "gitdir:~/Dev/personal/"]
    path = ~/Dev/personal/.gitconfig.personal

[includeIf "gitdir:~/Dev/work/"]
    path = ~/Dev/work/.gitconfig.work

[includeIf "gitdir:~/dev/"]
    path = ~/.gitconfig.work

[includeIf "gitdir:~/experiments/"]
    path = ~/.gitconfig.personal

[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true

[core]
    excludesfile = ~/.gitignore
    pager = delta

[init]
    defaultBranch = main

[interactive]
    diffFilter = delta --color-only

[merge]
    conflictStyle = zdiff3

[delta]
    navigate = true
    features = colorscheme

[delta "colorscheme"]
    minus-style                   = bold red
    minus-non-emph-style          = red
    minus-emph-style              = bold black red
    minus-empty-line-marker-style = normal red
    zero-style                    = normal
    plus-style                    = bold green
    plus-non-emph-style           = green
    plus-emph-style               = bold black green
    plus-empty-line-marker-style  = normal green
    whitespace-error-style        = reverse purple
    true-color                    = always
    line-numbers-zero-style       = dim normal
    line-numbers-minus-style      = red
    line-numbers-plus-style       = green
    line-numbers-left-style       = blue
    line-numbers-right-style      = blue
